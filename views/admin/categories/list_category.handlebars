<div class="d-flex">
    <div class="row flex-nowrap container-fluid">

        <!--menu navbar-->
        {{> _navbar }}


        <!--main content -->
        <div class="bg-light-subtle content-box flex-fill container-fluid overflow-hidden">

            <div class="mb-3">
                <span class="content-title">
                    {{>page_title}}
                </span>
            </div>
            <hr>

            <div class="mb-3">
                <a href="/admin/category/new" class="btn btn-outline-primary">
                    <i class="fa-solid fa-plus me-2"></i> Nova categoria
                </a>
            </div>

            <div class="col-xxl col-12">

                <div class="container-fluid mt-4 py-4">

                    
 
                    

                    {{#if categories.length}}

                    {{#each categories}}
                    <div class="row justify-content-center">
                        <table class="table table-striped">
                            <tr>
                                <th scope="row">
                                    <div class="align-items-center">
                                        {{ this.name }}
                                    </div>
                                </th>
                                <th>
                                    <div class="text-end align-items-center">
                                        <a href="/admin/category/update/{{this.id}}"
                                            class="btn btn-outline-secondary px-3 m-1">
                                            <i class="fa-regular fa-pen-to-square me-2"></i>
                                        </a>
                                        <a href="#" class="btn btn-outline-danger px-3 m-1">
                                            <i class="fa-solid fa-cubes-stacked me-2"></i>
                                        </a>
                                        <a href="#" class="btn btn-outline-warning px-3 m-1">
                                            <i class="fa-solid fa-newspaper me-2"></i>
                                        </a>
                                    </div>
                                </th>

                            </tr>
                        </table>
                    </div>
                    {{/each}}

                    {{else}}
                    <div class="mb-3 alert alert-danger" role="alert">
                        <h4 class="text-muted">{{message}} Clique <a href="/admin/category/new"
                                class="link-none-decoration">aqui</a> para adicionar</h4>
                    </div>
                    {{/if}}
                </div>

            </div>
        </div>

    </div>
</div>